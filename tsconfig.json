{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": false, // 因为 Vite 中使用的 ESbuild 暂时不支持 enum，暂时设置为 false
    "noEmit": true,
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"],
      "@C*": ["src/components*"],
      "@U*": ["src/utils*"],
      "@H*": ["src/hooks*"]
    }
  },
  "include": ["./src"]
}
